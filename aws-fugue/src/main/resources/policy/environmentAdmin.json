{
    "Version": "2012-10-17",
    "Statement": [
        {
            "Sid": "VisualEditor0",
            "Effect": "Allow",
            "Action": [
                "iam:GetPolicy",
                "iam:CreatePolicy",
                "iam:DeletePolicy",
                "iam:GetRole",
                "iam:CreateRole",
                "iam:DeleteRole",
                "s3:DeleteObject",
                "s3:PutObject",
                "s3:GetObject",
                "iam:ListAttachedRolePolicies",
                "iam:AttachRolePolicy",
                "iam:DetachRolePolicy",
                "s3:PutObjectTagging",
                "iam:GetPolicyVersion",
                "iam:CreatePolicyVersion",
                "iam:DeletePolicyVersion",
                "iam:ListPolicyVersions",
                "iam:UpdateAssumeRolePolicy"
            ],
            "Resource": [
                "arn:aws:iam::*:group/sym-s2-${environmentType}-${environmentId}-*",
                "arn:aws:iam::*:policy/sym-s2-${environmentType}-${environmentId}-*",
                "arn:aws:iam::*:role/sym-s2-${environmentType}-${environmentId}-*",
                "arn:aws:s3:::${awsConfigBucket}/config/sym-s2-${environmentType}-${environmentId}-*"
            ]
        },
        {
            "Sid": "ElbCreate",
            "Effect": "Allow",
            "Action": [
                "elasticloadbalancing:CreateListener",
                "elasticloadbalancing:DeleteListener",
                "elasticloadbalancing:CreateLoadBalancer",
                "elasticloadbalancing:DeleteLoadBalancer",
                "elasticloadbalancing:AddTags"
            ],
            "Resource": [
              "arn:aws:elasticloadbalancing:*:*:listener/*/*/*",
              "arn:aws:elasticloadbalancing:*:*:loadbalancer/app/*/*"
              ]
        },
        {
            "Sid": "ElbWrite",
            "Effect": "Allow",
            "Action": [
                "elasticloadbalancing:CreateTargetGroup",
                "elasticloadbalancing:ModifyRule",
                "elasticloadbalancing:CreateRule",
                "elasticloadbalancing:DeleteRule",
                "elasticloadbalancing:AddTags"
            ],
            "Resource": [
                "arn:aws:elasticloadbalancing:*:*:targetgroup/*/*",
                "arn:aws:elasticloadbalancing:*:*:listener/*/*/*",
                "arn:aws:elasticloadbalancing:*:*:listener-rule/app/*/*/*/*"
            ]
        },
        {
            "Sid": "All",
            "Effect": "Allow",
            "Action": [
                "ecs:DescribeTasks",
                "route53:ListResourceRecordSets",
                "route53:ListHostedZonesByName",
                "route53:CreateHostedZone",
                "ecs:ListServices",
                "ecs:DescribeServices",
                "ecs:UpdateService",
                "ecs:CreateService",
                "ecs:DeleteService",
                "ecs:ListTaskDefinitions",
                "ecs:DeregisterTaskDefinition",
                "ecs:RegisterTaskDefinition",
                "ecs:DescribeClusters",
                "ecs:CreateCluster",
                "logs:DescribeLogGroups",
                "logs:CreateLogGroup",
                "events:PutTargets",
                "events:PutRule",
                "elasticloadbalancing:DescribeLoadBalancers",
                "elasticloadbalancing:DescribeListeners",
                "elasticloadbalancing:DescribeTargetHealth",
                "elasticloadbalancing:DescribeTargetGroups",
                "elasticloadbalancing:DescribeRules",
                "apigateway:GET",
                "apigateway:DELETE",
                "apigateway:PUT",
                "apigateway:POST",
                "apigateway:PATCH"
            ],
            "Resource": [
                "*"
            ]
        },
        {
            "Sid": "Events",
            "Effect": "Allow",
            "Action": [
                "events:DescribeRule",
                "events:DeleteRule",
                "events:EnableRule",
                "events:RemoveTargets",
                "events:DisableRule",
                "events:ListTargetsByRule"
            ],
            "Resource": "arn:aws:events:*:*:rule/sym-s2-${environmentType}-${environmentId}-*"
        },
        {
            "Sid": "IAM",
            "Effect": "Allow",
            "Action": [
                "iam:PassRole"
            ],
            "Resource": [
                "arn:aws:iam::*:role/sym-s2-${environmentType}-*"
            ]
        },
        {
            "Sid": "R53Write",
            "Effect": "Allow",
            "Action": [
                "route53:ChangeResourceRecordSets"
            ],
            "Resource": [
                "arn:aws:route53:::hostedzone/*"
            ]
        },
        {
            "Sid": "ECS",
            "Effect": "Allow",
            "Action": [
                "logs:GetLogEvents",
                "ecs:StartTask",
                "ecs:RunTask"
            ],
            "Resource": [
                "arn:aws:logs:*:*:log-group:sym-s2-${environmentType}-${environmentId}-*",
                "arn:aws:logs:*:*:log-group:sym-s2-${environmentType}-${environmentId}-*:*:*",
                "arn:aws:ecs:*:*:task-definition/sym-s2-${environmentType}-${environmentId}-*"
            ]
        },
        {
            "Sid": "Lambda",
            "Effect": "Allow",
            "Action": [
                "lambda:CreateFunction",
                "lambda:DeleteFunction",
                "lambda:UpdateFunctionCode",
                "lambda:GetFunction",
                "lambda:UpdateFunctionConfiguration",
                "lambda:GetFunctionConfiguration",
                "lambda:GetPolicy",
                "s3:GetObject"
            ],
            "Resource": [
              "arn:aws:lambda:*:${awsAccountId}:function:sym-s2-${environmentType}-${environmentId}-*",
              "arn:aws:s3:::sym-s2-fugue-${environmentType}-*-config/lambda/*"
            ]
        }
    ]
}